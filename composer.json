{
	"name": "v12mike/postoftheday",
	"type": "phpbb-extension",
	"description": "Displays the most popular posts of the day/week/month/year/century on the boards index page.",
	"homepage": "https://github.com/v12mike/postoftheday",
	"version": "0.1.1",
	"time": "2015-09-22",
    "keywords": [
        "phpbb",
        "extension",
        "Post of the Day"
    ],
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Mike Morrin",
			"homepage": "https://www.phpbb.com/customise/db/author/v12mike/contributions",
			"email": "v12mike@ingenious.co.nz",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": ">=5.3.3",
                "anavaro/postlove": ">=1.1.0"
	},
	"extra": {
		"display-name": "Post of the Day",
		"soft-require": {
			"phpbb/phpbb": ">=3.1.2,<3.2.*@dev"
		},
		"version-check": {
			"host": "www.phpbb.com",
			"directory": "/customise/db/extension/postofthedayext",
			"filename": "version_check"
		}
	}
}